{
	"name": "chrome-extension-mcp",
	"module": "index.ts",
	"type": "module",
	"bin": {
		"grok-mcp": "build/index.js"
	},
	"private": true,
	"scripts": {
		"dev": "bun --hot src/index.ts",
		"lint": "bunx biome lint",
		"build": "bun build src/index.ts --bundle --minify --target=bun --outdir=build",
		"format": "bunx biome format",
		"check": "bunx biome check",
		"typecheck": "tsc --noEmit",
		"fix": "bun run lint --fix && bun run format --fix && bun run typecheck"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@types/bun": "latest"
	},
	"files": [
		"build"
	],
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.25.2",
		"zod": "3"
	}
}
